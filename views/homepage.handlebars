<!-- header Section -->
<header>
    <h1>BUDGIFY</h1> <!-- site name -->
    <h2 class="slogan">Your Personal Finance Application <span role="img" aria-label="money">ðŸ’°</span></h2> <!-- slogan with emoji -->
</header>

<!-- expenses section -->
<div class="expenses">
    <h2 class="expense">Expense Form</h2> <!-- expense form title -->
    <h4 class="questions">What budget duration would you prefer? Please choose from the following options.</h4> <!-- Question about budget duration -->
    <div class="form-floating">
        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
            <option selected>Select...</option> 
            <option value="1">Weekly</option> 
            <option value="2">Bi-Weekly</option> 
            <option value="3">Monthly</option> 
        </select>
        <label for="floatingSelect">Works with selects</label> 
    </div>

    <!-- income portion -->
    <form action="/expenses" method="POST">
        <label for="income">Income</label> <!-- Label for income input field -->
        <h4 class="questions">What is your current monthly income?</h4> <!-- Question about monthly income -->
        <div class="input-group mb-3">
            <span class="input-group-text">$</span> 
            <span class="input-group-text">0.00</span> 
            <input type="text" class="form-control" aria-label="Dollar amount (with dot and two decimal places)"> 
        </div>
    </form>
</div>

<!-- comments Section -->
<section class="comments-section">
    <button type="button" class="btn btn-outline-light">Submit</button> <!-- Button to submit comments -->
</section>

<!-- budget section -->
<div class="budget">
    <h2 class="expense">Budget Sections</h2> <!-- title for budget section -->
    <ul>
        {{!-- Loops over each budget section --}}
        {{#each budgetSections}} <!-- Handlebars loop to display budget sections -->
        <li>
            <span>{{category}}</span>
            <span>Allocated Budget: {{allocatedBudget}}</span> 
            <span>Spending Status: {{currentSpending}}</span> 
            <button>Edit</button>
            <button>Delete</button> 
        </li>
        {{/each}}
    </ul>
</div>

<!-- Add New Section Button -->
<section class="comments-section">
    <button type="button" class="btn btn-outline-light" href="/add-section">Add New Section</button> <!-- Button to add new budget section -->
</section>

<!-- Blog Post Section -->
<div class="blog-post">
    <h2 class="expense">Latest Blog Post</h2> 
    <h3>{{blogPost.title}}</h3> 
    <p>{{blogPost.content}}</p> 
    <p>{{blogPost.author}}</p> 
    <p>{{{get_emoji}}}</p> 
</div>

<!-- Comments Section -->
<section class="comments">
    <h3 class="expense">Comments</h3> <!-- Title for comments section -->
    <ul>
        {{!-- Loops over each comment section --}}
        {{#each comments}} 
        <li>
            <p>{{this}}</p> <!-- Display the comment content -->
            <!-- Add comment author if available -->
            <p>{{{get_emoji}}}</p> <!-- Display the emoji for the comment -->
        </li>
        {{/each}}
    </ul>
</section>

<!-- Comment Form Section -->
<section class="comments-section">
    <form action="/comments" method="POST">
        <div class="row">
            <div class="col">
                <input type="text" class="form-control" placeholder="First name" aria-label="First name"> <!-- Input for comment author name -->
            </div>
            <div class="col">
                <input type="text" class="form-control" placeholder="Comment" aria-label="Last name"> <!-- Input for entering a comment -->
            </div>
        </div>
    </form>
</section>

<!-- Submit Comment Button -->
<section class="comments-section">
    <button type="button" class="btn btn-outline-light">Submit Comment</button> <!-- Button to submit the comment form -->
</section>

<!-- Footer Section -->
<footer>
    <!-- Need a footer content here -->
</footer>
</body>
</html>
